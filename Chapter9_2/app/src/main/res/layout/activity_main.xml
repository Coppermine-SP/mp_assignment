<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/start_btn"
            android:text="사진보기 시작"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/stop_btn"
            android:text="사진보기 중지"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/picture_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ImageView
            android:src="@drawable/picture_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ImageView
            android:src="@drawable/picture_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ImageView
            android:src="@drawable/picture_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ImageView
            android:src="@drawable/picture_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ImageView
            android:src="@drawable/picture_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </ViewFlipper>
</LinearLayout>